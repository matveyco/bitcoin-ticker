{
  "manifest_version": 2,

  "name": "Bitcoin price",
  "description": "This extention check current bitcoin price from mining-profit.com.",
  "version": "0.1",

  "permissions": [
    "*://*/*",
    "storage",
    "alarms",
    "tabs"
  ],

  "background": {
    "scripts": ["eventBitcoin.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Bitcoin price"
  },

  "icons": { 
    "16": "img/icon.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [{
      "matches": ["*://*/*"],
      "css": ["content.css"]
    }
  ]
}